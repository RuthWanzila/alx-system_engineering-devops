#!/usr/bin/env bash
# Script to display all active IPv4 IPs on the machine

# Get the active network interfaces
interfaces=$(ip -o addr show | awk '$3 == "inet" {print $2}')

# Iterate over the interfaces and extract the IPv4 addresses
for interface in $interfaces; do
    ipv4=$(ip -o addr show $interface | awk '$3 == "inet" {print $4}')
    echo "Interface: $interface"
    echo "IPv4: $ipv4"
    echo
done
